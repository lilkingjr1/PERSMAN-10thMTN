<% include partials/header %>

<div class="container shadow mt-3 pt-3 pb-3 white-transparent">
	
	<div class="card mb-1">
			<div>
				<table style="width: 100%;">
					<tbody>
					<tr>
						<th style="text-align: center;">
							Pacific Time
						</th>
						<th style="text-align: center;">
							Central Time
						</th>
						<th style="text-align: center;">
							Eastern Time
						</th>
						<th style="text-align: center;">
							Central European
						</th>
					</tr>
					<tr>
						<td style="text-align: center; color: black;">
							<iframe src="https://free.timeanddate.com/clock/i6p85lc5/n137/fs16/ftb/th1/ta1" frameborder="0" width="113" height="20"></iframe>
						</td>
						<td style="text-align: center;">
							<iframe src="https://free.timeanddate.com/clock/i6p85lc5/n24/fs16/ftb/th1/ta1" frameborder="0" width="113" height="20"></iframe>
						</td>
						<td style="text-align: center;">
							<iframe src="https://free.timeanddate.com/clock/i6p85lc5/n179/fs16/ftb/th1/ta1" frameborder="0" width="113" height="20"></iframe>
						</td>
						<td style="text-align: center;">
							<iframe src="https://free.timeanddate.com/clock/i6p85lc5/n37/fs16/ftb/th1/ta1" frameborder="0" width="113" height="20"></iframe>
						</td>
					</tr>
					</tbody>
				</table>
			</div>
	</div>
	
	<% if(config.carouselImages[0] === "") { %>
		<h1 style="text-align: center;">Welcome to <%=config.websiteName%></h1>
		<h3 style="text-align: center;"><%=config.websiteSubtitle%></h3>
	<% } else { %>
		<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
			<% if(config.carouselImages.length > 1) { %>
				<ol class="carousel-indicators">
					<li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
					<% for(let i = 1; i < config.carouselImages.length; i++) { %>
						<li data-target="#carouselIndicators" data-slide-to="<%=i%>"></li>
					<% } %>
				</ol>
			<% } %>
			<div class="carousel-inner" style=" width:100%; height: 400px !important;">
				<div class="carousel-item active">
				  <img class="d-block w-100 scale-down" src="<%=config.carouselImages[0]%>" alt="<%=config.carouselTitles[0]%>">
				  <div class="carousel-caption d-none d-md-block">
					<h5><%=config.carouselTitles[0]%></h5>
				  </div>
				</div>
				<% for(let i = 1; i < config.carouselImages.length; i++) { %>
					<div class="carousel-item">
					  <img class="d-block w-100 scale-down" src="<%=config.carouselImages[i]%>" alt="<%=config.carouselTitles[i]%>">
					  <div class="carousel-caption d-none d-md-block">
						<h5><%=config.carouselTitles[i]%></h5>
					  </div>
					</div>
				<% } %>
			</div>
			<% if(config.carouselImages.length > 1) { %>
				<a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			<% } %>
		</div>
	<% } %>
	
	<% if(config.enableCallToAction === "on" && !currentUser) { %>
		<div class="jumbotron mt-2" style="background:lightsteelblue !important">
			<h1 class="display-4">Opportunity Awaits</h1>
			<p class="lead">Enlist today to join <%=config.websiteName%>.</p>
			<hr class="my-4">
			<p>Registering takes less than a minute, and will get you on your way towards joining the unit.</p>
			<p class="lead">
			<form action="/register" method="get">
				<button class="btn btn-success btn-lg">Enlist Now!</button>
			</form>
			</p>
		</div>
	<% } %>
	
	<% if(events.length > 0){ %>
		<br>
		<h1 style="text-align: center;">Recently Added Events</h1>
		<hr>

		<div class="container-fluid mt-4">
			<div class="row justify-content-center">
				<% events.forEach(function(event) { %>
				<div class="col-auto mb-3">
					<div class="card" style="width: 20rem;">
						<img class="card-img-top" src="<%=event.imageName%>" alt="Image Not Found">
						<div class="card-body">
							<h5 class="card-title"><%=event.title%></h5>
							<p class="card-text"><%=event.start%> - <%=event.startTime%> EST</p>
							<a href="/calendar/event/<%=event._id%>" class="btn btn-primary">View Event</a>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
    <% } %>
    <hr>
	<div>
        <p><%-config.landingText%></p>
    </div>
</div>

<% include partials/footer %>